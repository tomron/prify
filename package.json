{
  "name": "pr-file-reorder",
  "version": "0.1.0",
  "description": "Chrome extension for collaborative file ordering in GitHub Pull Requests",
  "main": "content/content.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:e2e": "playwright test",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "icons:generate": "bash scripts/generate-icons.sh",
    "icons:convert": "node scripts/svg-to-png.js"
  },
  "keywords": [
    "chrome-extension",
    "github",
    "pull-request",
    "code-review",
    "developer-tools"
  ],
  "author": "Tom Ron",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.11",
    "canvas": "^2.11.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.4",
    "rollup": "^4.57.1"
  }
}
